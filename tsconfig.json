{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["DOM", "ES2020"],
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
  }
}
